{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "ssjs", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-var": "error",
		"padded-blocks": "off",
		"prefer-const": "error",
		"prefer-rest-params": "off",
		"prefer-spread": "off",
		"require-jsdoc": "warn",
		"valid-jsdoc": "off"
	}
}
